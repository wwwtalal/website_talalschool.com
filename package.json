{
  "name": "website_talalschool.com",
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    
    "dev": "npm-run-all --serial spellcheck dev:serve",
    "dev:serve": "http-server src -o -p 5000",
    
    "build": "npm-run-all --serial spellcheck build:clean build:copy:github build:copy:favicon build:copy:fonts build:copy:img build:minify:css build:minify:js build:minify:html build:serve",
    "build:clean": "rimraf docs",
    "build:copy:favicon": "copyfiles -u 1 src/favicon.ico docs",
    "build:copy:github": "copyfiles -u 2 configs/github/CNAME docs",
    "build:copy:fonts": "copyfiles -u 1 src/fonts/**/* docs",
    "build:copy:img": "copyfiles -u 1 src/img/**/* docs",
    "build:minify:css": "cleancss -O2 -o docs/css/styles.css src/css/*.css",
    "build:minify:js": "terser src/js/*.js -o docs/js/scripts.js --compress --mangle --format comments=false",
    "build:minify:html": "html-minifier-terser --collapse-whitespace --remove-comments --remove-optional-tags --minify-css true --minify-js true src/index.html -o docs/index.html",
    "build:serve": "http-server docs -o -p 8088",
    "publish": "npm run build",
    
    "spellcheck": "cspell \"**/*.{html,md}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wwwtalal/website_talalschool.com.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wwwtalal/website_talalschool.com/issues"
  },
  "homepage": "https://github.com/wwwtalal/website_talalschool.com#readme",
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "copyfiles": "^2.4.1",
    "cspell": "^9.2.0",
    "html-minifier-terser": "^7.2.0",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "terser": "^5.43.1"
  }
}
